#!/bin/bash
	while :
	do
	clear
	echo "1.Circle"
	echo "2.Triangle"
	echo "3.Rectangle"
	read n

	case $n in
	1) echo "Enter radius"
	   read r
	   Area=$(( $r * $r * 22 / 7 ))
	   echo "Area: $Area"
	;;
	2) echo "Enter height"
	   read h
	   echo "Enter breadth"
	   read b
	   Area=$(( $b * $h / 2 ))
	   echo "Area: $Area"
	;;
	3) echo "Enter length"
	   read l
	   echo "Enter breadth"
	   read b
	   Area=$(( $b * $l ))
   	   echo "Area: $Area"
	;;
	esac
	read
	done
	
